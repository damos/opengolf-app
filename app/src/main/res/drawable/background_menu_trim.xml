<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:width="@dimen/MenuItemRadius" android:gravity="left">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="@color/colorPrimaryDark"
                android:centerColor="@color/colorPrimary"
                android:endColor="#00FFFFFF"/>

            <corners
                android:topLeftRadius="@dimen/MenuItemRadius"
                android:bottomLeftRadius="@dimen/MenuItemRadius"/>
        </shape>
    </item>
    <item android:width="@dimen/MenuItemRadius" android:gravity="right">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="180"
                android:startColor="@color/colorPrimaryDark"
                android:centerColor="@color/colorPrimary"
                android:endColor="#00FFFFFF"/>

            <corners
                android:topRightRadius="@dimen/MenuItemRadius"
                android:bottomRightRadius="@dimen/MenuItemRadius"/>
        </shape>
    </item>
