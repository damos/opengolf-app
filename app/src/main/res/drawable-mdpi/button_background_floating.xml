<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="oval">
            <stroke android:color="@color/colorFloatingButtonOutline" android:width="2px"/>
            <solid android:color="@color/colorFloatingButtonPressedBackGround" />
            <size
                android:width="55dp"
                android:height="55dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <stroke android:color="@color/colorFloatingButtonOutline" android:width="1px"/>
            <solid android:color="@color/colorFloatingButtonBackGround" />
            <size
                android:width="55dp"
                android:height="55dp"/>
        </shape>
    </item>
</selector>